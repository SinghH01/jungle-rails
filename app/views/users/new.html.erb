
<div class="card" style="width: 50%; margin-top: 5%">

  <div class="card-body">

    <h2 class="card-title">Signup</h2>

    <%= form_for :user, url: '/users' do |f| %>
           
      
      <form>
      <div class="form-group">  
      Firstname: <%= f.text_field :firstname,class: 'form-control' %>      
      </div>
      <div class="form-group">
      Lastname: <%= f.text_field :lastname,class: 'form-control' %>        
      </div>
      <div class="form-group">
      Email: <%= f.text_field :email,class: 'form-control'  %>
      
      </div>
      <div class="form-group">
      Password: <%= f.password_field :password,class: 'form-control'  %>      
      </div>
      <div class="form-group">
      Password Confirmation: <%= f.password_field :password_confirmation,class: 'form-control' %>        
        </div>

        <div style= "padding:10px 0">
        <%= f.submit "Submit", class:"btn btn-primary" %>
        </div>
      </form>
      <% end %>    
  </div>
</div>