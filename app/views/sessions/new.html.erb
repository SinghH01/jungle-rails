<div class="card" style="width: 50%;margin-top: 5%">

  <div class="card-body">

    <h2 class="card-title">Login</h2>

    <%= form_tag '/login' do %>

      <form>
        <div class="form-group">  
        Email:  <%= text_field_tag :email, "",class: 'form-control'%>
        </div>
        <div class="form-group">
        Password: <%= password_field_tag :password, "",class: 'form-control' %>
        </div>
        <div style= "padding:10px 0">
        <%= submit_tag "Submit", class:"btn btn-primary" %>
        </div>
      </form>
      <% end %>
    <a href="/signup" class="card-link">Signup</a>
    
  </div>
</div>